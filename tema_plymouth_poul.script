}

fun console_text_sety(window, y) {
	window.text.y = y;
}

fun console_text_setz(window, z) {
	window.text.z = z;
}

fun console_window_setwallpaper(window, path) {
	window.wallpaper.image = Image(path);
	window.wallpaper.sprite = Sprite(window.wallpaper.image);
}

fun update_console_window(window) {
	window.wallpaper.sprite.SetX(window.x);
	window.wallpaper.sprite.SetY(window.y);
	window.wallpaper.sprite.SetZ(window.z);

	for (i=0; i < window.NUM_SCROLL_LINES; i++) {
		window.message_sprite[i].SetPosition(window.x + window.text.x,
            (i * window.text.height) + window.y + window.text.y,
            window.z + window.text.z);
	}
}

fun window_scroll_message(window, text, color) {

   // Truncate the message if too long
   if (StringLength(text) > window.LINE_WIDTH) {
     text = text.SubString(0, window.LINE_WIDTH - 3);
     text += "...";
   }

   // Shift message one up
   for (i = window.NUM_SCROLL_LINES - 1; i > 0; i--) {
     window.lines[i] = window.lines[i-1];
   }

   // Create the image for the latest message
   window.lines[0] = Image.Text(text, color.r, color.g, color.b);

   // Re-positioning the text images
   for (i = 0; i < window.NUM_SCROLL_LINES; i++) {
     window.message_sprite[i].SetImage(window.lines[i]);
   }
   update_console_window(window);
}


