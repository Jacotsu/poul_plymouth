    debugsprite_bottom.SetPosition(0, (Window.GetHeight (0) - 20), 1);
}

fun DebugMedium(text) {
    debugsprite_medium.SetImage(ImageToText (text));
    debugsprite_medium.SetPosition(0, (Window.GetHeight (0) - 60), 1);
}

#-----------------------------------------Boot log window -----------------------
fun console_window() {
	object.NUM_SCROLL_LINES = 35;
	object.LINE_WIDTH = 52;
	object.x = 100;
	object.y = 100;
	object.z = 0;
	object.text.x = 0;
	object.text.y = 0;
	object.text.z = 1;
	object.text.height = 20;

	object.wallpaper.image = Image("message_box.png");
	object.wallpaper.sprite = Sprite(object.wallpaper.image);
	object.wallpaper.sprite.SetX(object.x);
	object.wallpaper.sprite.SetY(object.y);
	object.wallpaper.sprite.SetZ(object.z);

	for (i=0; i < object.NUM_SCROLL_LINES; i++) {
		object.lines[i]= Image.Text("", 0, 0, 0);
		object.message_sprite[i] = Sprite();
		object.message_sprite[i].SetPosition(object.x + object.text.x,
            (i * object.text.height) + object.y + object.text.y,
            object.z + object.text.z);
	}
	return object;
}

fun console_window_setx(window, x) {
	window.x = x;
}

fun console_window_setrelx(window, percx) {
	window.x = Math.Int(Window.GetX() + Window.GetWidth() * percx);
}

fun console_window_sety(window, y) {
	window.y = y;
}

fun console_window_setrely(window, percy) {
	window.y = Math.Int(Window.GetY() + Window.GetHeight() * percy);
}

fun console_window_setz(window, z) {
	window.z = z;
}

fun console_text_setx(window, x) {
